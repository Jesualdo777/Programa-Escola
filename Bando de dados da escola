CREATE DATABASE escola;

USE escola;

CREATE TABLE aluno (
    codigo_aluno INT AUTO_INCREMENT NOT NULL PRIMARY KEY,
    nome_aluno VARCHAR(20) NOT NULL,
    idade_aluno INT NOT NULL
);

CREATE TABLE professor (
    codigo_professor INT AUTO_INCREMENT NOT NULL PRIMARY KEY,
    nome_professor VARCHAR(20) NOT NULL,
    materia_professor VARCHAR(30) NOT NULL
);

CREATE TABLE curso (
    codigo_curso INT AUTO_INCREMENT NOT NULL PRIMARY KEY,
    nome_curso VARCHAR(30) NOT NULL,
    carga_horaria INT NOT NULL
);
